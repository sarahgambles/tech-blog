<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
    <div>
      Published by {{User.username}} on {{format_date createdAt}}
    </div>
  </div>
</article>
{{/each}}
</div>